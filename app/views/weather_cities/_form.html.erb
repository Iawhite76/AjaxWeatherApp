    <%= f.submit %>
  </div>

  <script type="text/javascript">
    url = "http://api.openweathermap.org/data/2.5/weather?q=Austin&mode=json&units=imperial";
    $.ajax({
        url: url,
        type: "get",
        dataType: "json",
        success: function (data) {
            console.log(data);
            alert("The temperature is: " + data.main.temp);
